---
layout: null
navi:
 exclude: yes
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:content="http://purl.org/rss/1.0/modules/content/"  xmlns:atom="http://www.w3.org/2005/Atom" xmlns:media="http://search.yahoo.com/mrss/" xmlns:dc="http://purl.org/dc/elements/1.1/" >
  <channel>
    <title><![CDATA[  AltcoinTrading.NET - Press Releases ]]></title>
    <description>
      <![CDATA[  Press releases syndicated content on AltcoinTrading.NET. ]]>
    </description>
    <image>
      <url>{{ site.url }}{{ site.baseurl }}/img/logo.jpg</url>
      <title><![CDATA[ {{ site.title | xml_escape }} ]]></title>
      <link>{{ site.url }}{{ site.baseurl }}/strategy/</link>
    </image>
    <language>en</language>
    <link>{{ site.url }}{{ site.baseurl }}/press-releases/</link>
    <atom:link href="{{ "/rss-press.xml" | prepend: site.baseurl | prepend: site.url }}" rel="self" type="application/rss+xml"/>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>

    {% for post in site.press limit:20 %}
    <item>
      <title><![CDATA[ {{ post.title | xml_escape }} ]]></title>
      <description><![CDATA[ {{ post.description | xml_escape }} ]]></description>
      {% if post.image[0] %}<media:content url="{{ post.image[0] | prepend: site.baseurl | prepend: site.url }}" medium="image" />{% endif %}

      <author><![CDATA[ {{ post.author_name }}@altcointrading.net ]]></author>
      <dc:creator><![CDATA[ {{ post.author_name }} ]]></dc:creator>

      <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
      <link>{{ post.url | prepend: site.baseurl | prepend: site.url }}</link>
      <guid isPermaLink="true">{{ post.url | prepend: site.baseurl | prepend: site.url }}</guid>
      {% if post.comments %}<comments>{{ post.url | prepend: site.baseurl | prepend: site.url }}#comments</comments>
      <slash:comments>0</slash:comments>{% endif %}
      {% for tag in post.tags %}<category><![CDATA[ {{ tag | xml_escape }} ]]></category>
      {% endfor %}
      {% for cat in post.categories %}<category><![CDATA[ {{ cat | xml_escape }} ]]></category>
      {% endfor %}
      <content:encoded><![CDATA[ {{ post.description | xml_escape }} ]]></content:encoded>
    </item>
   {% endfor %}
  </channel>
</rss>
